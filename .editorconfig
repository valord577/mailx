# see https://editorconfig.org

# top-most EditorConfig file
root = true

[*]
indent_size = 2
indent_style = space

charset = utf-8
end_of_line = lf
insert_final_newline = true

trim_trailing_whitespace = true

[*.go]
indent_size = 4
indent_style = tab

[*.{md, markdown}]
trim_trailing_whitespace = false
